%post
# Generic efi filename for VMs
mkdir -p /boot/efi/EFI/BOOT
if [ -d /boot/efi/EFI/almalinux/ ] && [ -f /boot/efi/EFI/almalinux/grubaa64.efi ];then
    for j in grub.cfg grubenv;do
        mv -f /boot/grub2/${j} /boot/efi/EFI/almalinux/
        ln -s ../efi/EFI/almalinux/${j} /boot/grub2/${j}
    done
    cp -f /boot/efi/EFI/almalinux/grubaa64.efi /boot/efi/EFI/BOOT/BOOTAA64.EFI
fi
%end
